# Managed by Ansible (role: certbot)
# Minimal HTTP server for ACME HTTP-01 challenge.

server {
    listen 80;
    # Match any Host header so this server block is selected even if another
    # default server exists for :80 on the host.
    server_name ~^.*$;

    location ^~ /.well-known/acme-challenge/ {
        root {{ certbot_webroot_path }};
        default_type "text/plain";
        try_files $uri =404;
    }

    location / {
{% if certbot_webroot_redirect_to_https | default(true) | bool %}
        return 301 https://$host$request_uri;
{% else %}
        return 404;
{% endif %}
    }
}
